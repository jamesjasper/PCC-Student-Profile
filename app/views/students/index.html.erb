<%= provide(:title, 'Students List') %>
<p id="notice"><%= notice %></p>
<div class="container mt-3 mb-4 d-flex justify-content-center">
  <div class="col-lg-9 mt-4 mt-lg-0">
    <h1>List of Students</h1>
    <div class="row">
      <div class="col-md-12">
        <div class="user-dashboard-info-box table-responsive mb-0 bg-white p-4 shadow-sm">
          <%= will_paginate %>
          <table class="table manage-candidates-top mb-0">
            <thead>
            <tr>
              <th class="text-lg-center">Student Name</th>
              <th class="text-lg-center-center">Year Level</th>
              <th class="action text-lg-center">Action</th>
            </tr>
            </thead>
            <tbody>
              <%= render @students %>
            </tbody>
          </table>
          <%= will_paginate %>
        </div>
      </div>
    </div>
  </div>
</div>
