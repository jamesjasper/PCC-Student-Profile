<%= provide(:title, 'Students List') %>
<p id="notice"><%= notice %></p>
<div class="container mt-3 mb-4 d-flex justify-content-center">
  <div class="col-lg-12 mt-4 mt-lg-0">
    <div class="row">
      <div class="col-3">
        <h1>List of Students</h1>
      </div>
      <div class="col-6">
        <%= render 'shared/search_form' %>
      </div>
      <div class="col-3 d-flex justify-content-lg-end">
        <%= link_to "Add New Student", new_student_path, class: "btn btn-primary btn-lg p-1 mb-3" %>
      </div>
        <div class="col-md-12">
        <div class="user-dashboard-info-box table-responsive mb-0 bg-white p-4 shadow-sm">
          <div class="pagination justify-content-center">
            <%= will_paginate %>
          </div>
          <table class="table manage-candidates-top mb-0 table-striped table-hover">
            <thead>
            <tr>
              <th class="text-lg-center"></th>
              <th class="text-lg-center"><%= link_to "Student Name", :sort => "first_name" %></th>
              <th class="text-lg-center"><%= link_to "Course", :sort => "course" %></th>
              <th class="text-lg-center-center"><%= link_to "Year Level", :sort => "year_level" %></th>
              <th class="action text-lg-center">Action</th>
            </tr>
            </thead>
            <tbody>
              <%= render @students %>
            </tbody>
          </table>
          <div class="pagination justify-content-center">
            <%= will_paginate %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
