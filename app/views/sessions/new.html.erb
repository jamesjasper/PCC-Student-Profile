<%= provide(:title, "Login") %>
<div class="container-fluid row d-flex align-items-center justify-content-center">
  <h3 class="justify-content-center d-flex align-items-center">Login</h3>
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(url: login_path, scope: :session, local: true) do |f| %>
      <div class="mb-3">
        <%= f.label :email %>
      </div>
      <div class="mb-3">
        <%= f.email_field :email, class: 'form-control' %>
      </div>
      <div class="mb-3">
        <%= f.label :password %>
      </div>
      <div class="mb-3">
        <%= f.password_field :password, class: 'form-control' %>
      </div>
      <div class="d-flex justify-content-center gap-3 border-1 mb-3">
        <span class="align-items-center gap-lg-3">
          <%= f.submit "Log in", class: "btn btn-primary" %>
        </span>
      </div>
    <% end %>
  </div>
</div>