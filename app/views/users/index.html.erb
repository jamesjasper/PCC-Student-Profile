<p id="notice"><%= notice %></p>
<div class="container-fluid mt-3 mb-4 d-flex justify-content-center">
  <div class="col-lg-9 mt-4 mt-lg-0">
    <div class="row d-flex justify-content center">
      <div class="col-4 d-flex justify-content-lg-center p-4">
        <h3>Users List</h3>
      </div>
      <div class="col-4 d-flex justify-content-lg-center p-4">
        <%= render 'shared/user_search_form' %>
      </div>
      <div class="col-4  d-flex justify-content-lg-center">
        <%= link_to new_user_path, class: "btn btn-primary btn-sm mt-4 mb-4" do %>
          <i class="bi bi-person-plus-fill"></i>Add User
        <% end %>
      </div>
      <div class="card gradient-custom">
        <div class="user-dashboard-info-box table-responsive mb-0 bg-white p-4 shadow-sm">    
            <table class="table manage-candidates-top mb-0 table-striped table-hover table-sm caption-top">
              <thead>
                <caption>List of Users</caption>
                <tr>
                  <th class="col-8 text-center">Users</th>
                  <th class="col-4 text-center">Action</th>
                </tr>
              </thead>
              <tbody>
                <%= render @users %>
              </tbody>
            </table>
            <div class="pagination justify-content-center">
              <%= will_paginate %>
            </div>
        </div>
      </div>
    </div>
  </div>
</div>