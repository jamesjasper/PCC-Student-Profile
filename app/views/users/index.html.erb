<p id="notice"><%= notice %></p>
<div class="container mt-3 mb-4 d-flex justify-content-center">
  <div class="col-lg-9 mt-4 mt-lg-0">
    <div class="row">
      <div class="col">
        <h1>Users List</h1>
      </div>
      <div class="col d-flex justify-content-lg-end">
        <%= link_to "Add New User", new_user_path, class: "btn btn-primary btn-lg p-1 mb-3" %>
      </div>
      <div class="col-md-12">
        <div class="user-dashboard-info-box table-responsive mb-0 bg-white p-4 shadow-sm">
            <div class="pagination justify-content-center">
              <%= will_paginate %>
            </div>
            <table class="table manage-candidates-top mb-0">
              <thead>
              <tr>
                <th>Users</th>
                <th>Action</th>
              </tr>
              </thead>
              <tbody>
                <%= render @users %>
              </tbody>
            </table>
            <div class="pagination justify-content-center">
              <%= will_paginate %>
            </div>
        </div>
      </div>
    </div>
  </div>
</div>