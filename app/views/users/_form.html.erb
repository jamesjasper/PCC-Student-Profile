<div class="row-cols-sm-auto">
  <div class="form-outline mb-3">
    <%= f.label "Upload picture:", class: "form-label" %>
    <span class="card-img form">
    <%= f.file_field :image, class: "form-control form-control-sm", accept: "image/jpeg,image/gif,image/png" %>
    </span>
  </div>
  <div class="form-group mb-3">
    <%= f.label :first_name %>
    <%= f.text_field :first_name, class: "form-control" %>
  </div>
 </div>
<div class="row-cols-sm-auto">
  <div class="form-group mb-3">
    <%= f.label :last_name %>
    <%= f.text_field :last_name, class: "form-control" %>
  </div>
</div>
<div class="row-cols-sm-auto">
  <div class="form-group mb-3">
    <%= f.label :email %>
    <%= f.email_field :email, class: "form-control" %>
  </div>
</div>
<div class="row-cols-sm-auto">
  <div class="form-group mb-3">
    <%= f.label :username %>
    <%= f.text_field :username, class: "form-control" %>
  </div>
</div>
<div class="row-cols-sm-auto">
  <div class="form-group mb-3">
    <%= f.label :password %>
    <%= f.password_field :password, class: "form-control" %>
  </div>
</div>
<div class="row-cols-sm-auto">
  <div class="form-group mb-3">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, class: "form-control" %>
  </div>
</div>
<div class="row-cols-sm-auto">
  <div class="form-group mb-3">
    <% if admin? %>
      <%= f.label :role, class: "form-label" %>
      <%= f.select :role, %w[user admin], class: "form-select form-select-lg mb-3" %>
    <% end %>
  </div>
</div>