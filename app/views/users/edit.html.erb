<%= provide(:title, "Edit User") %>

<p id="notice"><%= notice %></p>

<div class="container">
  <div class="row d-flex justify-content-center min-vh-100">
    <div class="col-sm-6 align-baseline">
      <div class="card" style="width: 18rem;">
        <div class="card-body">
                <img src="https://bootdey.com/img/Content/avatar/avatar7.png" alt="Maxwell Admin" class="card-img-top">
              <div class="card-text">
                <h5 class="text-lg-center"><%= full_name @user %></h5>
                <h6 class="text-lg-center"><%= @user.username %></h6>
              </div>
            </div>
      </div>
    </div>
    <div class="col-sm-6">
      <div class="card">
        <div class="card-body">
          <div class="row gutters">
            <div class="row-col-sm-auto">
              <h6 class="mb-2 text-primary">Personal Details</h6>
            </div>
            <div class="row-cols-sm-auto">
              <%= form_with(model: @user, local: true) do |f| %>
              <div class="form-group">
                <%= f.label :first_name %>
                <%= f.text_field :first_name, class: "form-control" %>
              </div>
            </div>
            <div class="row-cols-sm-auto">
              <div class="form-group">
                <%= f.label :last_name %>
                <%= f.text_field :last_name, class: "form-control" %>
              </div>
            </div>
            <div class="row-cols-sm-auto">
              <div class="form-group">
                <%= f.label :email %>
                <%= f.email_field :email, class: "form-control" %>
              </div>
            </div>
            <div class="row-cols-sm-auto">
              <div class="form-group">
                <%= f.label :username %>
                <%= f.text_field :username, class: "form-control" %>
              </div>
            </div>
            <div class="row-cols-sm-auto">
              <div class="form-group">
                <%= f.label :password %>
                <%= f.password_field :password, class: "form-control" %>
              </div>
            </div>
            <div class="row-cols-sm-auto">
              <div class="form-group">
                <%= f.label :password_confirmation %>
                <%= f.password_field :password_confirmation, class: "form-control" %>
              </div>
            </div>
                <div class="row-cols-sm-auto">
                  <div class="form-group">
                    <%= f.label :role, class: "form-label" %>
                    <%= f.select :role, %w[user admin], class: "form-select form-select-lg mb-3" %>
                  </div>
                </div>
          </div>
        <div class="row gutters">
          <div class="row-cols-sm-auto p-4">
            <div class="text-lg-center">
              <%= link_to "Cancel", link_to(@user), class: "btn btn-sm btn-secondary" %>
              <%= f.submit "Update", class: "btn btn-sm btn-primary" %>
            </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    </div>
  </div>
</div>