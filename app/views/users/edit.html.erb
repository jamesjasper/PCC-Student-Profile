<%= provide(:title, "Edit User") %>
<%= provide(:button_text, "Update") %>

<div class="container">
  <div class="row d-flex justify-content-center min-vh-100">
    <div class="col-lg-6 p-4">
      <div class="card">
        <div class="card-body text-align-center">
              <%= image_tag @user.display_image , class: "rounded-circle img-thumbnail mx-auto d-block" if @user.image.attached? %>
              <div class="card-text">
                <h5 class="text-lg-center"><%= @user.full_name %></h5>
                <h6 class="text-lg-center"><%= @user.username %></h6>
              </div>
            </div>
      </div>
    </div>
    <div class="col-lg-6 p-4">
      <div class="card">
        <div class="card-body">
          <div class="row gutters">
            <h6 class="mb-2 text-primary">Personal Details</h6>
            <%= form_with(model: @user, local: true) do |f| %>
              <%= render 'shared/error_messages', object: f.object %>
              <%= render 'form', f: f %>
              <div class="text-lg-center p-3">
                <%= f.submit yield(:button_text), class: "btn btn-sm btn-primary", value: "update" %>
                <i class="bi bi-plus-circle"></i>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>