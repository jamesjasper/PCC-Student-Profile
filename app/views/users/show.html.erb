<%= provide(:title, @user.first_name) %>
<p id="notice"><%= notice %></p>
<section class="min-vh-50" style="background-color: #f4f5f7;">
  <div class="container py-5">
    <div class="row d-flex min-vh-100">
      <div class="col col-lg-6 mb-4 mb-lg-0">
        <div class="card mb-3" style="border-radius: .5rem;">
          <div class="row g-0">
            <div class="col-md-4 gradient-custom text-center text-black"
                 style="border-top-left-radius: .5rem; border-bottom-left-radius: .5rem;">
                <%= image_tag @user.image , class: "rounded-circle img-fluid" if @user.image.attached? %>
                <h5><%= full_name @user %></h5>
                <p><%= @user.role %></p>
                <% if current_user?(@user) || admin? %>
                <ul class="mb-0 d-flex justify-content-lg-center align-content-center list-unstyled">
                  <li>
                    <%= link_to "edit", edit_user_path(@user), class: "btn btn-sm btn-outline-primary" %>
                  </li>
                  <li>
                    <%= link_to "delete", user_path(@user), method: :delete, data: {confirm: 'Are you sure you want to delete this user?'}, class: "btn btn-sm btn-outline-danger"%>
                  </li>
                  <% end %>
                </ul>
            </div>
            <div class="col-md-8">
              <div class="card-body p-4">
                <h6>Information</h6>
                <hr class="mt-0 mb-4">

                <div class="row pt-1">
                  <div class="col-12 mb-3">
                    <h6>Email</h6>
                    <p class="text-muted"><%= @user.email %></p>
                  </div>
                </div>

                <div class="row pt-1">
                    <div class="col-12 mb-3">
                      <h6>Role</h6>
                      <p class="text-muted"><%= @user.role %></p>
                    </div>
                </div>
                <h6>Added Students</h6>
                <hr class="mt-0 mb-4">
                <div class="row pt-1">
                  <div class="col-6 mb-3">
                    <h6>Recently added:</h6>
                    <p class="text-muted"><%= !@student.nil? ? student_full_name(@student) : 'No added student records found!' %></p>
                  </div>
                  <div class="col-6 mb-3">
                    <h6>Total</h6>
                    <p class="text-muted"><%= @user.students.count %></p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="col">
        <div class="pagination justify-content-center">
          <%= will_paginate @students %>
        </div>
        <table class="table manage-candidates-top mb-0 table-striped table-hover caption-top">
          <caption>User Added Students</caption>
          <thead>
          <tr>
            <th class="text-lg-center"><%= link_to "Student Name", :sort => "first_name" %></th>
            <th class="text-lg-center"><%= link_to "Course", :sort => "course" %></th>
            <th class="text-lg-center-center"><%= link_to "Year Level", :sort => "year_level" %></th>
            <th class="action text-lg-center">Action</th>
          </tr>
          </thead>
          <tbody>
          <%= render @students %>
          </tbody>
        </table>
        <div class="pagination justify-content-center">
          <%= will_paginate @students %>
        </div>
      </div>
    </div>
  </div>
</section>